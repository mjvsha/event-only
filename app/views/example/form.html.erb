<h1>Job application submission </h1>
<%= form_for @job_application do |helper| %>

<p>
  <%= helper.label :full_name %>
  <%= helper.text_field :full_name %>
</p>

<p>
  <%= helper.label :phone %>
  <%= helper.telephone_field :phone %>
</p>

<p>
  <%= helper.label :hobby %>
  <%= helper.text_field :hobby %>
</p>

<p>
  <%= helper.label :years_experience %>
  <%= helper.number_field :years_experience %>
</p>

<p>
  <%= helper.label :available_date %>
  <%= helper.date_field :available_date %>
</p>

<p>
  <%= helper.submit "Submit Your Application" %>
</p>

<% end %>
